<h1>Editing event</h1>

<p><%= link_to '参加登録者の一覧', admin_event_attendees_path(@event) %></p>

<div id="edit_event">
<% form_for(@event, :url => {:action => 'update'}) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :locals => {:form => f} %>
<p>
  <%= f.submit "Update" %>
</p>
<% end %>
</div>

<%= link_to_remote('Preview',
  :url => {:controller => "admin/events", :action => "preview", :id => @event.id},
  :update => 'preview',
  :submit => "edit_event",
  :method => :put) %>

<div class="backto">
<%= link_to 'イベント一覧', admin_events_path %>
</div>

<div id="preview" style="padding:1em;border:1px solid #ccc;">

</div>
